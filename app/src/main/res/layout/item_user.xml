<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/ivUserProfilePicture"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginLeft="@dimen/margin_10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/tvUserName"
        android:layout_alignParentTop="true"
        android:textSize="13sp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:textStyle="bold"
        android:paddingLeft="5dp"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/ivUserProfilePicture"
        android:layout_toEndOf="@+id/ivUserProfilePicture" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvScreenName"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_toRightOf="@+id/tvUserName"
        android:layout_toEndOf="@+id/tvUserName"
        android:layout_alignBottom="@+id/ivUserProfilePicture"
        android:textSize="11sp"
        android:textColor="@color/dark_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:textSize="12sp"
        android:textColor="#000000"
        android:paddingLeft="5dp"
        android:clickable="true"
        android:autoLink="web"
        android:textColorLink="@color/hyperLinkColor"
        android:layout_below="@+id/tvUserName"
        android:layout_toRightOf="@+id/ivUserProfilePicture"
        android:layout_toEndOf="@+id/ivUserProfilePicture"/>


</RelativeLayout>