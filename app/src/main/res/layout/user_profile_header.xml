<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.simpletweets.fragments.UserHeaderFragment">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/ivBackgroundImage"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />
        <ImageView
            android:layout_width="@dimen/margin_50dp"
            android:layout_height="@dimen/margin_50dp"
            android:id="@+id/ivProfile"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:background="@color/black"
            android:padding="2dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvProfileName"
            android:textSize="18sp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_below="@+id/ivProfile"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvScreenName"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_below="@+id/tvProfileName"
            android:layout_centerHorizontal="true"/>
            <Button
                android:layout_height="5dp"
                android:layout_width="5dp"
                android:id="@+id/btnUnSelected"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_circle_grey_filled"
                android:layout_alignParentBottom="true" />
            <Button
                android:layout_height="5dp"
                android:layout_width="5dp"
                android:id="@+id/btnSelected"
                android:layout_marginLeft="3dp"
                android:background="@drawable/icon_circle_white_filled"
                android:layout_alignTop="@id/btnUnSelected"
                android:layout_alignBottom="@id/btnUnSelected"
                android:layout_toRightOf="@id/btnUnSelected"
                android:layout_toEndOf="@id/btnUnSelected" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pbLoading"
        android:visibility="invisible" />

</RelativeLayout>


