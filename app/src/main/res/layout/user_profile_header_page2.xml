<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/ivProfileHeaderImage"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvProfileHeaderDescription"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:scrollbars="vertical"
        android:maxLines="3"
        android:paddingTop="40dp"/>

    <Button
        android:layout_height="5dp"
        android:layout_width="5dp"
        android:id="@+id/btnUnSelected"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_circle_grey_filled"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_height="5dp"
        android:layout_width="5dp"
        android:id="@+id/btnSelected"
        android:layout_marginLeft="3dp"
        android:background="@drawable/icon_circle_white_filled"
        android:layout_alignTop="@id/btnUnSelected"
        android:layout_alignBottom="@id/btnUnSelected"
        android:layout_toRightOf="@id/btnUnSelected"
        android:layout_toEndOf="@id/btnUnSelected" />


</RelativeLayout>